{
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist",
    "declaration": true,
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "exclude": ["src/**/*.spec.ts"]
}
